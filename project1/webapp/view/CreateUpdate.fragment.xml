<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog title="{= ${viewModel>/mode} === 'Create' ? 'Create Employee' : 'Edit Employee'}" contentWidth="400px">
        <content>
            <f:SimpleForm editable="true" layout="ResponsiveGridLayout">
                <f:content>
                    <Label text="Employee ID" required="true" />
                    <Input value="{dialogModel>/EmpId}" editable="{= ${viewModel>/mode} === 'Create'}" />
                    <Label text="Employee Name" />
                    <Input value="{dialogModel>/EmpName}" />
                    <Label text="Designation" />
                    <Input value="{dialogModel>/Designation}" />
                    <Label text="Department" />
                    <Input value="{dialogModel>/Department}" />
                    <Label text="Join Date" />
                    <Input value="{dialogModel>/JoinDate}" placeholder="e.g. 2024-01-15" />
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Save" type="Emphasized" press="onSave" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
